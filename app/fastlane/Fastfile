default_platform(:ios)

platform :ios do
  desc "Push to TestFlight (internal testing)"
  lane :testflight_upload do
    app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_KEY_CONTENT"],
      is_key_content_base64: true
    )

    upload_to_testflight(
      ipa: "./src-tauri/gen/apple/build/arm64/oxidize.ipa",
      skip_waiting_for_build_processing: true
    )
  end

  desc "Submit to App Store review"
  lane :release do
    app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_KEY_CONTENT"],
      is_key_content_base64: true
    )

    upload_to_app_store(
      ipa: "./src-tauri/gen/apple/build/arm64/oxidize.ipa",
      submit_for_review: true,
      automatic_release: true
    )
  end

  desc "Build and sign iOS app"
  lane :build do
    setup_ci if ENV["CI"]
    
    match(
      type: "appstore",
      readonly: true
    )

    gym(
      workspace: "./src-tauri/gen/apple/oxidize.xcworkspace",
      scheme: "oxidize_iOS",
      export_method: "app-store",
      output_directory: "./src-tauri/gen/apple/build/arm64",
      output_name: "oxidize.ipa"
    )
  end
end
