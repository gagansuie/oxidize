{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Oxidize",
    "version": "0.4.14",
    "identifier": "com.oxidize.app",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "withGlobalTauri": false,
        "windows": [
            {
                "title": "Oxidize",
                "label": "main",
                "width": 420,
                "height": 680,
                "minWidth": 380,
                "minHeight": 600,
                "resizable": true,
                "fullscreen": false,
                "decorations": true,
                "transparent": false,
                "center": true
            }
        ],
        "security": {
            "csp": null
        },
        "trayIcon": {
            "iconPath": "icons/icon.png",
            "iconAsTemplate": true,
            "id": "main"
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.ico"
        ],
        "category": "Utility",
        "shortDescription": "AI-powered network acceleration",
        "longDescription": "Oxidize is an AI-powered network relay that learns your network patterns for optimal routing and performance.",
        "resources": [],
        "externalBin": [
            "binaries/oxidize-daemon"
        ],
        "linux": {
            "appimage": {
                "bundleMediaFramework": false
            },
            "deb": {
                "depends": [
                    "libcap2-bin",
                    "iptables"
                ],
                "postInstallScript": "scripts/postinstall.sh",
                "preRemoveScript": "scripts/preremove.sh"
            },
            "rpm": {
                "depends": [
                    "libcap",
                    "iptables"
                ],
                "postInstallScript": "scripts/postinstall.sh",
                "preRemoveScript": "scripts/preremove.sh"
            }
        },
        "macOS": {
            "entitlements": "entitlements.plist",
            "exceptionDomain": "",
            "frameworks": [],
            "minimumSystemVersion": "10.13",
            "signingIdentity": null
        },
        "windows": {
            "certificateThumbprint": null,
            "digestAlgorithm": "sha256",
            "timestampUrl": "",
            "nsis": {
                "installerIcon": "icons/icon.ico",
                "headerImage": null,
                "sidebarImage": null,
                "installMode": "perMachine",
                "installerHooks": "scripts/nsis-hooks.nsi"
            }
        }
    },
    "plugins": {
        "shell": {
            "open": true
        },
        "updater": {
            "endpoints": [
                "https://github.com/gagansuie/oxidize/releases/latest/download/latest.json"
            ],
            "pubkey": ""
        }
    }
}